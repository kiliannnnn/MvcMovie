@model MvcMovie.Core.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class="form-signin", role="form" }))
{
    @Html.ValidationSummary(true)
    // @await Html.PartialAsync("~/Views/Shared/_Layout.cshtml")

    <div class="form-group">
        @Html.TextBoxFor(model => model.Login, new {required="required", focus="focus", @class="form-control", placeholder="Email" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(model => model.Password, new { required = "required", @class = "form-control", placeholder = "Mot de passe" })
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>

    <div class="text-center">
        <a href="@Url.Action("ForgotPassword", "Account")">@Localizer["ForgetPasswordTxt"]</a>
    </div>
}
